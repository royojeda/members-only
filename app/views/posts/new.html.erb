<h1>New Post</h1>

<%= form_with model: @post do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <br>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body, placeholder: "What's happening?", size: "45x6", maxlength: 280 %>
  </div>

  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>
